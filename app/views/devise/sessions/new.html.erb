<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>用户登录</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: "用户邮箱" %>
          <%= f.input :password, required: true, label: "密码" %>
          <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登录" %>
          <%= link_to "新用户注册", new_registration_path(resource_name), class: "btn btn-default" %>
        </div>
      <% end %>

      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
