<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h3><%= channels[0].dgroup %>通道设置</h3>

  <span>共有<%= channels.count %>条通道</span>
  &nbsp;&nbsp;
  <a href="#" class="<%= link_class %>" style="font-size:8px">展开</a>
  <a href="#" class="<%= link_class %>_save channel_save" style="font-size:8px">保存</a>
  <!-- <button class="btn btn-primary btn-xs">保存</button> -->
  <table class="hide table table-striped channel-select <%= link_class %>_table">
    <thead>
      <tr>
        <th>使能/禁用</th>
        <th>通道号</th>
        <th>通道名称</th>
        <!-- <th>数据预处理</th> -->
        <!-- <th>单位</th> -->
        <th>数据删除</th>
      </tr>
    </thead>
    <tbody>      
      <% channels.each do |item| %>        
        <tr class="<%= link_class %>_channels channel_item" data-id="<%= item.id %>">
          <% devicechannel = Devicechannel.where( :dchannel_id => item.id ).first %>
          <td>
            <input type="checkbox" class="<%= link_class %>_checkbox c_enable"
              <% enable_str = false %>
              <% if devicechannel %>
                <% enable_str = devicechannel.enable %>
              <% end %>
              <% if enable_str %>
                checked
              <% end %>
             />
          </td>
          <td><%= item.show_id %></td>          
          <td class="td_channel_name" style="width: 60%; overflow:hidden">
            <% channel_name = item.name %>
            <% if devicechannel %>
                <% channel_name = devicechannel.name %>
              <% end %> 
            <input value="<%= channel_name %>" disabled class="c_name">
            &nbsp;&nbsp;
            <a href="#" class="edit_channel_name">编辑</a>
            <a href="#" class="finish_channel_name hide" >完成</a>
          </td>
       <!--    <td>
            <input value="<%#= item.unit %>" disabled style="width:120px" class="c_unit">
          </td> -->
          <!-- <td><%#= item.description %></td> -->
          <td>
            <button class="btn btn-danger btn-sm">删除数据</button>
          </td>
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>