<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-md-6 col-md-offset-2 main">
      <h2>修改密码</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }, wrapper: :horizontal_form) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :current_password, label: "当前密码", required: true %>
          <%= f.input :password, label: "输入新密码", autocomplete: "off", required: false %>
          <%= f.input :password_confirmation, label: "再次输入新密码", required: false, hint: "" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "提交" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
