<%= render partial: 'front/common/nav_bar' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <!-- <li class="active"><a href="<%= front_profile_path %>">个人中心 <span class="sr-only">(current)</span></a></li> -->
        <li class="active"><a href="<%= front_profile_path %>">个人中心 <span class="sr-only">(current)</span></a></li>
        <li><a href="<%= front_new_device_path %>">创建设备</a></li>
        <li><a href="<%= front_new_channel_path %>">创建通道</a></li>
        <li><a href="<%= front_show_chart_path %>">图形分析</a></li>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h2 class="sub-header">设备详情</h2>
      <p>
        <%= link_to "创建新设备", front_new_device_path, class: "btn btn-primary btn-sm" %>
        <%= link_to "编辑此设备", front_new_device_path, class: "btn btn-warning btn-sm" %>
        <%= link_to "删除此设备", front_new_device_path, class: "btn btn-danger btn-sm" %>
      </p>
      <div class="row placeholders">
        <div class="col-sm-6">
            <table class="table table-striped">
              <tbody>
                <tr>
                  <!-- 10位随机字符数字字母组合 -->
                  <td>设备ID:</td>
                  <td><%= @device.device_id %></td>
                </tr>
                <tr>
                  <td>设备名</td>
                  <td><%= @device.device_name %></td>
                </tr>
                <tr>
                  <td>描述</td>
                  <td><%= @device.device_description %></td>
                </tr>
                <tr>
                  <td>创建日期</td>
                  <td>Date</td>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>设备ID</th>
              <th>设备名</th>
              <th>描述</th>
              <th>创建日期</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= link_to @device.device_id, '#', title: '查看详情' %></td>
              <td><%= @device.device_name %></td>
              <td><%= @device.device_description %></td>
              <td>Date</td>
              <td style="width:150px">
                <%= link_to '修改', '#', class: 'btn btn-warning', style: "padding: 3px 6px;" %>                  
                <%= link_to '删除', '#', class: 'btn btn-danger', style: "padding: 3px 6px;" %>
              </td>
            </tr> 
          </tbody>
        </table>
      </div>
      <h2 class="sub-header">设备通道列表</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>通道ID</th>
              <th>通道设备名</th>
              <th>通道名称</th>
              <th>通道数据</th>
              <th>创建日期</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if @channels %>
              <% @channels.each do |channel| %>
                <tr>
                  <td><%= channel.channel_id %></td>
                  <td><%= Device.where(:id => channel.device_id).first.device_name %></td>
                  <td><%= channel.channel_name %></td>
                  <td><%= channel.data_points %></td>
                  <td>修改-删除</td>
                </tr>  
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
